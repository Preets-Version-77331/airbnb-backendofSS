<%- include('partials/head') %>
<body class="bg-gray-50 font-sans leading-normal tracking-normal">
   <%- include('partials/nav') %>

    <main class="max-w-7xl mx-auto px-6 py-8 flex">
        <div class="flex-1">
            <h1 class="text-4xl font-bold mb-8">Welcome to Hamara Airbnb</h1>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if(homes.length === 0) { %>
                    <p class="text-gray-600 text-sm mb-2">No homes available currently. Please add a home to see it here.</p>
                <% } else { %>
                    <% homes.forEach(home => { %>
                    <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow transform hover:scale-105 flex flex-col">
                        <img src="<%= home.photourl ? '/images/' + home.photourl : '/images/default.jpg' %>" alt="<%= home.houseName %>" class="h-48 w-full rounded-lg object-cover mb-4">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h2>
                        <p class="text-gray-600 text-sm mb-2">Price: Rs.<%= home.price %></p>
                        <p class="text-gray-600 text-sm mb-2">Location: <%= home.location %></p>
                        <p class="text-gray-600 text-sm mb-2">Rating: <%= home.rating %> / 5</p>
                        <a href="/host/add-home?edit=<%= home.id %>" class="mt-auto bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors text-center">
                            Edit Home
                        </a>
                    </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </main>

</body>
</html>


